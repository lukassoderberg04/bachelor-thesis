<Window x:Class="pm1000_visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:pm1000_visualizer"
        mc:Ignorable="d"
        Title="PM1000 Visualizer" Height="450" Width="800" Background="#FF28292B">
    <Grid Margin="15px">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Configuration container. -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="250px"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Device selector container. -->
            <DockPanel Grid.Column="0">
                <Button x:Name="RefreshBtn" Click="RefreshBtn_Click" Content="Refresh" Width="Auto" Padding="10,1,10,1" BorderThickness="0,0,0,0" BorderBrush="{x:Null}" Background="#FF3E95CC"/>
                <Border Width="15px" Visibility="Hidden"/>
                <ComboBox x:Name="DeviceSelector" ItemsSource="{Binding Devices}" DisplayMemberPath="SerialNumber" SelectionChanged="DeviceSelector_SelectionChanged" Width="Auto" BorderBrush="{x:Null}" Background="White"/>
            </DockPanel>

            <!-- Data recorder container. -->
            <DockPanel Grid.Column="1" HorizontalAlignment="Right">
                <Button x:Name="RecordBtn" Click="RecordBtn_Click" Content="Start recording" Width="Auto" Padding="10,1,10,1" Background="#FF5AA978" BorderBrush="{x:Null}" IsEnabled="False"/>
                <Border Width="15px" Visibility="Hidden"/>
                <Button x:Name="StopRecordBtn" Click="StopRecordBtn_Click" Content="Stop recording" Width="Auto" Padding="10,1,10,1" Background="#FFEF6F6C" BorderBrush="{x:Null}" IsEnabled="False"/>
            </DockPanel>
        </Grid>

        <!-- Result container. -->
        <WrapPanel Grid.Row="1" Margin="15px">
            <ScottPlot:WpfPlot x:Name="Plot"></ScottPlot:WpfPlot>
        </WrapPanel>
    </Grid>
</Window>
