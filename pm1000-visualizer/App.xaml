<!-- 
    This file is the app's global configuration file.
    It defines the application-level resources and the startup window.
    'x:Class' links this markup to the App.xaml.cs code-behind, 
    and the xmlns entries import necessary libraries like ScottPlot.
-->
<Application x:Class="pm1000_visualizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:pm1000_visualizer"
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources></Application.Resources>
</Application>